# Nested session

source-file ~/.tmux.shared

set-option -g prefix C-a

# misc. nicer bindings
bind r source-file ~/.tmux.nested

# prefix setup
#bind-key C-a send-prefix
bind-key C-a last-window

set -g status-right ''
set -g status-left ''
set -g status-bg colour234

set-window-option -g window-status-current-bg colour245
set-window-option -g window-status-current-fg colour0

set-window-option -g window-status-bell-fg colour226
set-window-option -g window-status-bell-bg colour0
